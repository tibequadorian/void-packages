# Template file for 'VCO-plugins'
pkgname=VCO-plugins
version=0.3.0
revision=1
build_style=gnu-makefile
short_desc="Anti-aliased oscillator plugins"
maintainer="tibequadorian <tibequadorian@posteo.de>"
license="GPL-2.0-or-later"
homepage="https://kokkinizita.linuxaudio.org/linuxaudio/ladspa/"
